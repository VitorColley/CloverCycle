<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectorActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="579dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:srcCompat="@drawable/clovercycle"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/jobList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/jobBtn"
                android:layout_width="182dp"
                android:layout_height="53dp"
                android:backgroundTint="#0B2A1A"
                android:text="Accept Job"
                android:textColor="#1CA83C" />

            <Button
                android:id="@+id/endBtn"
                android:layout_width="184dp"
                android:layout_height="53dp"
                android:backgroundTint="#0B2A1A"
                android:text="End Delivery"
                android:textColor="#1CA83C"
                android:visibility="gone" />

            <Button
                android:id="@+id/collectBtn"
                android:layout_width="180dp"
                android:layout_height="53dp"
                android:backgroundTint="#0B2A1A"
                android:text="Finish Collection"
                android:textColor="#1CA83C"
                android:visibility="gone" />

            <Button
                android:id="@+id/menuBtn"
                android:layout_width="182dp"
                android:layout_height="53dp"
                android:backgroundTint="#0B2A1A"
                android:text="Log Out"
                android:textColor="#1CA83C" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>