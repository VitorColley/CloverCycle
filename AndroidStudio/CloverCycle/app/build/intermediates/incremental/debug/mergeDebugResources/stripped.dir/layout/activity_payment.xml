<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivityComponent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="192dp"
        android:layout_height="142dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/clovercycle"
        android:contentDescription="logo" />

    <TextView
        android:id="@+id/cardNumTXT"
        android:layout_width="123dp"
        android:layout_height="47dp"
        android:layout_marginTop="88dp"
        android:text="Card Number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <EditText
        android:id="@+id/cardNUM"
        android:layout_width="354dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#159B33"
        android:ems="10"
        android:hint="Enter card number"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardNumTXT" />

    <TextView
        android:id="@+id/monthTXT"
        android:layout_width="142dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Expiry MM/YY"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardNUM" />

    <EditText
        android:id="@+id/expiryNUM"
        android:layout_width="354dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#159B33"
        android:ems="10"
        android:hint="Enter expiry MM/YY"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthTXT" />

    <Button
        android:id="@+id/paymentBTN"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#0B2A1A"
        android:text="Collect Payment"
        android:textColor="#1CA83C"
        android:textColorHighlight="#0A291A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expiryNUM" />

    <Button
        android:id="@+id/Button2"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="#0B2A1A"
        android:text="Main Menu"
        android:textColor="#1CA83C"
        android:textColorHighlight="#0A291A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expiryNUM" />

    <Button
        android:id="@+id/viewHistoryButton"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0B2A1A"
        android:text="Payment History"
        android:textColor="#1CA83C"
        android:textColorHighlight="#0A291A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Button2" />

</androidx.constraintlayout.widget.ConstraintLayout>
