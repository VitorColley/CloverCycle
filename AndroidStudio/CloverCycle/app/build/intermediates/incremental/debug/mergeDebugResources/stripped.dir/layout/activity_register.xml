<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.493">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:srcCompat="@drawable/clovercycle"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="Please enter your Email:"
                android:textColor="#0A291A"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailInputTf"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#159B33"
                android:inputType="text|textEmailAddress"
                android:textColor="#0A291A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="Please enter a Username:"
                android:textColor="#0A291A"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/userNameInputTf"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#159B33"
                android:inputType="text"
                android:textColor="#0A291A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Please enter a Password:"
                android:textColor="#0C2C1F"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/passwordInputTf"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#159D36"
                android:backgroundTint="#169D37"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#0A291A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Please enter your Eircode:"
                android:textColor="#0C2C1F"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/addressInputTf"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#159D36"
                android:backgroundTint="#169D37"
                android:ems="10"
                android:inputType="text"
                android:textColor="#0A291A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="Register as a:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/userRb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="User" />

                <RadioButton
                    android:id="@+id/collectorRb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Collector" />


            </RadioGroup>

            <Button
                android:id="@+id/registerButtonBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#0B2A1A"
                android:onClick="Register"
                android:text="Register"
                android:textColor="#1CA83C"
                android:textColorHighlight="#0A291A"
                tools:ignore="DuplicateIds,MissingConstraints"
                tools:layout_editor_absoluteX="139dp"
                tools:layout_editor_absoluteY="678dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
